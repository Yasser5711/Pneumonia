{
  "name": "server",
  "version": "4.0.0",
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "generate:openapi:dev": "tsx scripts/generateOpenApi.ts",
    "generate:openapi": "NODE_ENV=production tsx scripts/generateOpenApi.ts",
    "create:api-key": "tsx scripts/createApiKey.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx scripts/dbMigrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:reset": "tsx scripts/dbReset.ts",
    "db:seed": "tsx scripts/dbSeed.ts",
    "db:introspect": "drizzle-kit introspect",
    "deactivate:expired": "tsx scripts/desactivateExpired.ts",
    "dev": "wireit",
    "server:dev": "nodemon --watch src -e ts,js --exec \"tsx src/index.ts\" --legacy-watch",
    "server:start": "tsx -r tsconfig-paths/register src/index.ts",
    "test:predict": "tsx test/test.ts",
    "build": "echo 'ğŸ“¦ Building server types...' && tsc --build tsconfig.build.json --verbose",
    "check:lint": "eslint . --ext .ts && prettier --check \"src/**/*.{ts,js,json,md,yml,yaml}\" && echo ğŸš¨âœ… Lint check passed!",
    "check:types": "tsc -p tsconfig.typecheck.json && echo ğŸ§ âœ… Type check passed!",
    "fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "check:knip": "knip && echo âœ‚ï¸âœ… Unused code check passed!",
    "check:dep": "depcheck && echo ğŸ“¦âœ… Dependency check passed!",
    "check:prune": "echo 'ğŸŒ¿âœ… Prune check passed! for now ts-prune -e ./src'",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "check:test": "vitest run  && echo ğŸ§ªâœ… Tests passed! || (echo 'âŒ Fix the above issues before committing ğŸ’¡' && exit 1)",
    "check:all": "yarn check:lint && yarn check:types && yarn check:knip && yarn check:dep  && echo ğŸ§°âœ¨ All checks passed! || (echo 'âŒ Fix the above issues before committing ğŸ’¡' && exit 1)"
  },
  "wireit": {
    "dev": {
      "command": "concurrently --names \"server\" --prefix-colors \"cyan\" \"nodemon --watch src -e ts,js --exec tsx src/index.ts --legacy-watch",
      "service": true
    }
  },
  "type": "module",
  "types": "types/src/index.d.ts",
  "main": "src/index.ts",
  "dependencies": {
    "@fastify/basic-auth": "^6.2.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^10.3.0",
    "@scalar/fastify-api-reference": "^1.29.3",
    "@trpc/server": "^11.4.3",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.2.12",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "fastify": "^5.3.3",
    "ms": "^2.1.3",
    "nodemon": "^3.1.10",
    "postgres": "^3.4.7",
    "trpc-to-openapi": "^2.3.2",
    "trpc-ui": "^1.0.15",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.25.67",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.2",
    "@fastify/websocket": "^11.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/eslint-plugin-security": "^3",
    "@types/ms": "^2",
    "@types/node": "^24.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.1.4",
    "depcheck": "^1.4.7",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import": "^2.32.0",
