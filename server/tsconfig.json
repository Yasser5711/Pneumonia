{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["./src/db/services/*"],
      "@repositories/*": ["./src/db/repositories/*"],
      "@utils/*": ["./src/utils/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@logger": ["./src/logger.ts"],
      "@env": ["./src/env.ts"],
      "@db": ["./src/db"],
      "@tests/*": ["./test/*"]
    }
  },
  "include": ["src", "test", "package.json"],
  "exclude": ["dist", "node_modules"]
}
