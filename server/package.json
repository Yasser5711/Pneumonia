{
  "name": "server",
  "version": "2.0.0",
  "packageManager": "yarn@4.3.1",
  "scripts": {
    "generate:openapi:dev": "tsx scripts/generateOpenApi.ts",
    "generate:openapi": "NODE_ENV=production tsx scripts/generateOpenApi.ts",
    "create:api-key": "tsx scripts/createApiKey.ts",
    "db:generate": "drizzle-kit generate",
    "db:push": "yarn db:generate && drizzle-kit push",
    "db:migrate": "tsx scripts/dbMigrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:reset": "tsx scripts/dbReset.ts",
    "db:seed": "tsx scripts/dbSeed.ts",
    "db:introspect": "drizzle-kit introspect",
    "dev": "wireit",
    "server:dev": "nodemon --watch src -e ts,js --exec \"tsx src/index.ts\" --legacy-watch",
    "server:start": "tsx -r tsconfig-paths/register src/index.ts",
    "test:predict": "tsx test/test.ts",
    "build": "echo 'ğŸ“¦ Building server types...' && tsc --build tsconfig.build.json --verbose",
    "check:lint": "eslint . --ext .ts && prettier --check \"src/**/*.{ts,js,json,md,yml,yaml}\" && echo ğŸš¨âœ… Lint check passed!",
    "check:types": "tsc -p tsconfig.typecheck.json && echo ğŸ§ âœ… Type check passed!",
    "fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "check:knip": "knip && echo âœ‚ï¸âœ… Unused code check passed!",
    "check:dep": "depcheck && echo ğŸ“¦âœ… Dependency check passed!",
    "check:prune": "ts-prune -e ./src  && echo ğŸŒ¿âœ… Prune check passed!",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "check:test": "vitest run --silent --coverage && echo ğŸ§ªâœ… Tests passed! || (echo 'âŒ Fix the above issues before committing ğŸ’¡' && exit 1)",
    "check:all": "yarn check:lint && yarn check:types && yarn check:knip && yarn check:dep && yarn check:prune && echo ğŸ§°âœ¨ All checks passed! || (echo 'âŒ Fix the above issues before committing ğŸ’¡' && exit 1)"
  },
  "wireit": {
    "dev": {
      "command": "concurrently --names \"server\" --prefix-colors \"cyan\" \"nodemon --watch src -e ts,js --exec tsx src/index.ts --legacy-watch",
      "service": true
    }
  },
  "type": "module",
  "dependencies": {
    "@9or9/trpc-openapi": "^2.0.1",
    "@fastify/basic-auth": "^6.2.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.2.2",
    "@scalar/fastify-api-reference": "^1.28.32",
    "@trpc/client": "^11.1.2",
    "@trpc/server": "^11.1.2",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.43.1",
    "execa": "^9.5.2",
    "fastify": "^5.3.2",
    "nodemon": "^3.1.10",
    "postgres": "^3.4.5",
    "sharp": "^0.34.1",
    "trpc-ui": "^1.0.15",
    "tsconfig-paths": "^4.2.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.0",
    "@fastify/websocket": "^11.0.2",
    "@types/bcrypt": "^5",
    "@types/eslint-plugin-security": "^3",
    "@types/node": "^22.14.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitest/coverage-istanbul": "^3.1.2",
    "@vitest/coverage-v8": "3.1.2",
    "@vitest/ui": "^3.1.2",
    "depcheck": "^1.4.7",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-security": "^3.0.1",
    "knip": "^5.50.2",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "ts-prune": "^0.10.3",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2",
    "vitest-mock-extended": "^3.1.0"
  }
}
